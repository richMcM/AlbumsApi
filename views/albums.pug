extends layout


block content
    div(class = "div1")
        h1= title

        table(class="pure-table pure-table-bordered" id="table")
            thead
                tr: th <b>#</b>
                    th <b>Albums</b>
                    th <b>Artist</b>
                    th <b>Genre</b>
                    th <b>Price</b>
                    th

            tbody

                tr
                    td <br>
                    td <br>
                    td <br>
                    td <br>
                    td <br>
                    td <br>

                each album in albums
                    tr
                        td <b>#{count++}</b>
                        td #{album.title}
                        td #{album.artist}
                        td #{album.genre}
                        td #{album.price}
                        td
                            a(href="/viewalbum/" + album._id style="cursor:pointer") View album

        a(class ="button2" href="/addalbum") Add Album
