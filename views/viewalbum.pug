extends layout

block content
    div(class = "div1")
        h1= headTitle

        form(role='form', action='/delete/' + album._id, method='post')
            p <b>Title:</b> #{album.title}
            p <b>Artist:</b> #{album.artist}
            p <b>Genre:</b> #{album.genre}
            p <b>Price:</b> #{album.price}

            input(class="delete_link" onclick="return confirm('Are you sure you want to delete this item?');" type="submit" value="Delete Album")

        a(class ="button" href="/updatealbum/" + album._id ) Update Album
